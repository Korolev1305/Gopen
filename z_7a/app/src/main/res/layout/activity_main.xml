<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ewigkeit.z_7a.MainActivity">

    <TextView
        android:text="Выберите метод:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Метод Вегстейна"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:id="@+id/button_veg"
        android:layout_below="@+id/button_hord"
        android:layout_alignLeft="@+id/button_hord"
        android:layout_alignStart="@+id/button_hord"
        android:layout_alignRight="@+id/button_hord"
        android:layout_alignEnd="@+id/button_hord" />

    <Button
        android:text="Метод хорд"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:id="@+id/button_hord"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/button_iter"
        android:layout_alignEnd="@+id/button_iter"
        android:layout_alignLeft="@+id/button_iter"
        android:layout_alignStart="@+id/button_iter" />

    <Button
        android:text="Метод простых итераций"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_iter"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/button_veg"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
